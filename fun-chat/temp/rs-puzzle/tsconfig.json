{
    "include": ["src/**/*", ".eslintrc.js", "webpack.config.js"],
    "exclude": ["node_modules", "dist"],
    "compilerOptions": {
        "outDir": "./dist/",
        "noImplicitAny": true,
        "module": "es6",
        "target": "ES2021",
        "jsx": "react",
        "allowJs": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "strict": true,
        "typeRoots": ["node_modules/@types", "src/@types/custom.d.ts"],
        "plugins": [
          { "name": "typescript-plugin-css-modules"},
          
        ],
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true
    }
}
